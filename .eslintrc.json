{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "windows"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "no-var": ["error"],
    "prefer-const": ["error"],
    "no-trailing-spaces": ["error"],
    "eol-last": ["error", "always"]
  },
  "globals": {
    "JSZip": "readonly",
    "ImageConverterPro": "writable"
  }
}